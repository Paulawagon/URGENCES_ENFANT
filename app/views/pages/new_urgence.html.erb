<%= simple_form_for(@child) do |f| %>
			<%= f.input :birth_date,
               input_html: { autocomplete: "Birth date", class: "input-line full-width" } %>
               <%= f.input :weight,
                           input_html: { autocomplete: "Weight", class: "input-line full-width" } %>
			<%= f.input :cardiac,
               input_html: { autocomplete: "Cardiac", class: "input-line full-width" } %>
			<%= f.input :respiratory,
               input_html: { autocomplete: "Respiratory", class: "input-line full-width" } %>
            <%= f.input :prematurity,
                        input_html: { autocomplete: "Prematurity", class: "input-line full-width" } %>
			<%= link_to "Suivant urgent", direction_path, class: "btn btn-outline-secondary btn-lg mb-2" %>
			<%= link_to "Suivant non urgent", disease_path(Disease.first), class: "btn btn-outline-secondary btn-lg mb-2" %>
<% end %>